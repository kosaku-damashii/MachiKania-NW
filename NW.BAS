REM NORMAL DISTRIBUTION
USEGRAPHIC 9
USEVAR MAXW, MAXH,PREX,PREY
MAXW=SYSTEM(22):MAXH=SYSTEM(23)
DIM G(MAXW)
DO
  X=MAXW/2:PREX=X
  PREY=0
  FOR Y=0 TO MAXH-1
    REM PSET PREX,PREY,0
    PREX=X:PREY=Y
    REM PSET X,Y,6
    D=RND()%2
    IF D=1 THEN
      X=X+2
    ELSE
      X=X-2
    ENDIF
    IF X<0 THEN X=0
    IF X>(MAXW-1) THEN X=MAXW-1 
    REM WAIT 1
  NEXT
  G(X)=G(X)+1
  IF G(X)>0 THEN LINE X,MAXH,X,MAXH-1-G(X),7
  IF G(X)=MAXH-1 THEN BREAK
LOOP WHILE INKEY()=0